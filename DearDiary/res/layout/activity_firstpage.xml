<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/app_bg"
    tools:context=".Firstpage" >

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="14dp"
        android:text="Medium Text"
        android:textColor="#00688b"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bankinfo_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendinfo_button"
        android:layout_below="@+id/welcometext"
        android:background="#ff4500"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:text="Bank Information" />

    <Button
        android:id="@+id/friendinfo_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankinfo_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#9b30ff"
        android:text="Friends Information"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/reminder_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendinfo_button"
        android:layout_marginTop="25dp"
        android:text="Set Reminder" />

</RelativeLayout>
